<Window x:Class="PR10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <GroupBox Header="Квадрат" Margin="10">
            <StackPanel>
                <TextBlock Text="Длина стороны " Width="100" Height="30"/>
                <TextBox x:Name="SquareDlina" Width="100" Height="30" Margin="5" />
                <Button Content="Вычислить" Width="100" Height="30" Click="Button_Click"/>
                <TextBlock x:Name="SquareResult" Width="300" Height="30" VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Круг" Margin="10,200,10,10">
            <StackPanel>
                <TextBlock Text="Радиус Окружности " Width="150" Height="30"/>
                <TextBox x:Name="CircusRadius" Width="100" Height="30" Margin="5"/>
                <Button Content="Вычислить" Width="100" Height="30" Click="Button_Click_1"/>
                <TextBlock x:Name="CircusResult"  Height="30" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
